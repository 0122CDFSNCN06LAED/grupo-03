<!DOCTYPE html>
<html lang=”en”>

<head>
    <%- include("./partials/head") %>
    
</head>


<body class="body">

    <header>
        <div class="header-div">
            <p class="back-arrow"><a class="arrow" href="/"><i class="fa-solid fa-arrow-left-long"></i> </a></p>

        </div>

        <div class="titulo-nuevos productos">
            <h1 class="nutrifarco">Crear Cuenta      <img class="img-logo" src="/img/nutri-logo.png"/></h1>  
        </div>

    </header>


    <main>

        <div>
            

            <form action="/product/newProduct" id="register" method="POST" enctype="multipart/form-data" >
                <div class="div-input">
                    <h3>Nombre</h3>
                    <label class="hidden " for="nickname"><br></label>
                    <input class="input-log" type="text" name="nombre" id="nickname" placeholder="Nombre y Apellido" />
                    <% if (locals.errors && errors.nombre) { %>
                        <div class="errors">
                            <%= errors.nombre.msg %> 
                        </div>
                    <% } %>
                </div>

                <div class="div-input">
                    <h3>Precio</h3>
                    <label class="hidden" for="nickname"><br></label>
                    <input class="input-log" type="number" name="precio" id="nickname" placeholder="e-mail" />
                    <% if (locals.errors && errors.Precio) { %>
                        <div class="errors">
                            <%= errors.precio.msg %>
                        </div>
                    <% } %>
                </div>

                <div class="div-input">
                    <h3>Descripcion</h3>
                    <label class="hidden" for="nickname"> <br></label>
                    <input class="input-log" type="text" name="descripcion" id="nickname" placeholder="Numero de telefono" />
                    <% if (locals.errors && errors.descripcion) { %>
                        <div class="errors">
                            <%= errors.descripcion.msg %>
                        </div>
                    <% } %>
                </div>

                <div class="div-input">
                    <h3>Categoria</h3>
                    <label class="hidden" for="password"><br></label>
                    <input class="input-log" type="password" name="categoria" id="password" placeholder="Contraseña" />
                    <% if (locals.errors && errors.categoria) { %>
                        <div class="errors">
                            <%= errors.password.msg %>
                        </div>
                    <% } %>
                </div>

                <div class="div-input">
                    <h3>Imagen </h3>
                    <label class="hidden " for="nickname"> <br></label>
                    <input 
                        type="file" 
                        id="imagen" 
                        name="prodImg" 
                        class="input-log" <%= locals.errors && errors.prodImg ? 'is-invalid' : null %>
                    >
                    <% if (locals.errors && errors.prodImg) { %>
                        <div class="errors">
                            <%= errors.prodImg.msg %>
                        </div>
                    <% } %>
                </div>
               
            </form>

                <div class="div-bottom">
                    <button class="bottom-log-continuar" type="submit"></button>
                    <a href="/"></a>
                </div>

                    <p class="need-container"><a class="need" href="/help">
                                Necesito ayuda para ingresar </a>
                    </p>
                </div>
            
        </div>
    </main>

    <footer>
        <%- include("./partials/footer-log-reg") %>
    </footer>
</body>

</html>