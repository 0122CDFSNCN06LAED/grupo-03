<!DOCTYPE html>
<html lang="”en”">
  <head>
    <%- include("./partials/head") %>
  </head>

  <body class="body">
    <header>
      <div class="header-div">
        <p class="back-arrow">
          <a class="arrow" href="/"
            ><i class="fas fa-arrow-alt-circle-left"></i>
          </a>
        </p>
      </div>
      <h1>
        NutriFarco<img
          class="img"
          src="./img/baking-1293986_1920.png"
          class="logo"
        />
      </h1>
    </header>

    <main>
      <div>
        <form action="/product/<%= resuEdit.id %>?_method=PUT">
          <div class="div-input">
            <h3>Id de producto</h3>
            <label class="hidden" for="nickname"><br /></label>
            <input
              class="input-log"
              type="text"
              name="nombre"
              id="nickname"
              value="<%= resuEdit.id %>"
            />
            <% if (locals.errors && errors.nombre) { %>
            <div class="errors"><%= errors.nombre.msg %></div>
            <% } %>
          </div>

          <div class="div-input">
            <h3>Precio</h3>
            <label class="hidden" for="nickname"><br /></label>
            <input class="input-log" type="number" name="precio" id="nickname" value="<%= resuEdit.precio %>" />
            <% if (locals.errors && errors.precio) { %>
              <div class="errors"><%= errors.precio.msg %></div>
              <% } %>
            </div>

            <div class="div-input">
              <h3>Descripcion</h3>
              <label class="hidden " for="nickname"><br></label>
              <input class="input-log" type="text" name="descripcion" id="nickname" value=<%= resuEdit.descripcion %> />
              <% if (locals.errors && errors.descripcion) { %>
                  <div class="errors">
                      <%= errors.descripcion.msg %>
                  </div>
              <% } %>
            </div>

            <div class="div-input">
                <h3>Categoria</h3>
                <label class="hidden " for="nickname"><br></label>
                <input class="input-log" type="text" name="categoria" id="nickname" value=<%= resuEdit.categoria %> />
                <% if (locals.errors && errors.categoria) { %>
                    <div class="errors">
                        <%= errors.categoria.msg %>
                    </div>
                <% } %>
              </div>
          <input type="submit" value="" />
        </form>

        <form
          action="/product/<%= resuEdit.id %>?_method=DELETE"
          id="productEdit"
          method="POST"
          enctype="single/form-data"
        >
          <div class="div-bottom">
            <a href="/"
              ><button class="bottom-log-continuar" type="submit">
                Borrar <br /></button
            ></a>
          </div>
        </form>

        <p class="need-container">
          <a class="need" href="/help"> Necesito ayuda para ingresar </a>
        </p>
      </div>
    </main>

    <footer><%- include("./partials/footer-log-reg") %></footer>
  </body>
</html>