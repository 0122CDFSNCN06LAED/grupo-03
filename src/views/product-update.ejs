<!DOCTYPE html>
<html lang=”en”>
    <head>
        <%- include("./partials/head") %>
    </head>

    <body class="body">
        <header>
            <div class="header-div">
                <p class="back-arrow"><a class="arrow" href="/"><i class="fas fa-arrow-alt-circle-left"></i> </a></p>
            </div>
            <h1>
                NutriFarco<img class="img" src="./img/baking-1293986_1920.png" class="logo" />
            </h1>
        </header>

        <main>
            <div> 
                <form action="/product/<%= resuModificar.id %>?_method=PUT" id="userUpdate" method="POST" enctype="multipart/form-data" >                    
                    <div class="div-input">
                        <h3>Ingresa el nuevo nombre</h3>
                        <label class="hidden " for="nickname"><br></label>
                        <input class="input-log" type="text" name="nombre" id="nickname" value="<%= resuModificar.nombre %>"  />                    
                        <% if (locals.errors && errors.nombre) { %>
                            <div class="errors">
                                <%= errors.nombre.msg %> 
                            </div>
                        <% } %>
                    </div>

                    <div class="div-input">
                        <h3>Ingresa el precio</h3>
                        <label class="hidden " for="nickname"><br></label>
                        <input class="input-log" type="text" name="precio" id="nickname" value=<%= resuModificar.precio %> />
                        <% if (locals.errors && errors.email) { %>
                            <div class="errors">
                                <%= errors.precio.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="div-input">
                        <h3>Ingresa la descripcion</h3>
                        <label class="hidden " for="nickname"> <br></label>
                        <input class="input-log" type="text" name="descripcion" id="nickname" value=<%= resuModificar.descripcion %> />
                        <% if (locals.errors && errors.descripcion) { %>
                            <div class="errors">
                                <%= errors.descripcion.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="div-input">
                        <h3>Ingresa la categoria</h3>
                        <label class="hidden " for="nickname"> <br></label>
                        <input class="input-log" type="text" name="categoria" id="nickname" value=<%= resuModificar.categoria %> />
                        <% if (locals.errors && errors.categoria) { %>
                            <div class="errors">
                                <%= errors.categoria.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="div-input">
                        <h3>Ingresa la imagen</h3>
                        <label class="hidden " for="nickname"> <br></label>
                        
                        <input 
                        type="file" 
                        id="imagen" 
                        name="prodImg" 
                        class="input-log" <%= locals.errors && errors.prodImg ? 'is-invalid' : null %> >
                    </div>
                </form>   
                    
                    <div class="div-bottom">
                        <div class="div-input">
                        <button class="bottom-log-continuar" type="submit">Modificar <br></button>
                        <a href="/"></a>
                    </div>
               

                                                   
                
                    <p class="need-container"><a class="need" href="/help">
                        Necesito ayuda para ingresar </a>
                    </p>       
                        
            </div>
        </main>

        <footer>
            <%- include("./partials/footer-log-reg") %>
        </footer>
    </body>

</html>